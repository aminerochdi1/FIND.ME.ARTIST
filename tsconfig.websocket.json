{
    "compilerOptions": {
      "jsx": "react-jsx", 
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true, 
      "allowJs": true,           
      "moduleResolution": "node" 
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }